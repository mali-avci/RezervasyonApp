<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewDialogBaslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mevcut Seferler"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDialogSeferler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="visible"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/buttonKapat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDialogBaslik"
        tools:listitem="@layout/sefer_card_tasarim" />

    <TextView
        android:id="@+id/textViewBosMesaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Henüz sefer bulunmamaktadır."
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/buttonKapat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDialogBaslik" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonKapat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KAPAT"
        android:textSize="14sp"
        android:textStyle="bold"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

